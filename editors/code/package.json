{
	"name": "vscode-owl-ms",
	"version": "0.7.2",
	"displayName": "OWL Manchester Syntax",
	"description": "OWL language server support for vscode",
	"author": "Janek Winkler",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/janekx21/owl-ms-language-server"
	},
	"publisher": "JanekWinkler",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"owl-ms",
		"vscode",
		"owl"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:plaintext",
		"onLanguage:owl-ms"
	],
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#6175BE",
		"theme": "dark"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "owl-ms",
				"extensions": [
					".omn"
				],
				"aliases": [
					"OWL Manchester Syntax",
					"omn"
				],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"configuration": {
		"type": "object",
		"title": "Example configuration",
		"properties": {
			"olw-ms-language-server.maxNumberOfProblems": {
				"scope": "resource",
				"type": "number",
				"default": 100,
				"description": "Controls the maximum number of problems produced by the server."
			},
			"olw-ms-language-server.trace.server": {
				"scope": "window",
				"type": "string",
				"enum": [
					"off",
					"messages",
					"verbose"
				],
				"default": "off",
				"description": "Traces the communication between VS Code and the language server."
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"package": "vsce package"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.35.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"mocha": "^10.3.0",
		"typescript": "^5.9.2",
		"vsce": "^2.15.0"
	}
}